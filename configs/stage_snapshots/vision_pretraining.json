{
  "stage": "vision_pretraining",
  "training": {
    "epochs": 5,
    "lr": 1e-05,
    "batch_size": 64,
    "vicreg_loss_weight": 1.0,
    "max_text_length": 32,
    "accumulate_grad_batches": 2,
    "losses": [
      {
        "type": "vicreg",
        "weight": 1.0,
        "params": {
          "similarity_weight": 25.0,
          "variance_weight": 25.0,
          "covariance_weight": 1.0
        }
      }
    ],
    "model_config": {
      "freeze_language_model": true,
      "freeze_vision_encoder": false,
      "use_vicreg_head": true
    }
  },
  "data": {
    "train": [
      "data/quic360/train.csv"
    ],
    "val": [
      "data/quic360/valid.csv"
    ]
  },
  "image_processing": {
    "crop_strategy": "e2p",
    "image_size": [
      224,
      224
    ],
    "overlap_ratio": 0.5,
    "stitching_mode": "concat",
    "stitch_target_to_view_width": true,
    "stitch_interp": "linear",
    "fov_deg": 90.0,
    "use_vision_processor": true,
    "anyres_patch_size": 336,
    "anyres_max_patches": 12,
    "normalize": true,
    "vision_model_name": "google/siglip-base-patch16-224"
  },
  "models": {
    "vision_model_name": "google/siglip-base-patch16-224",
    "vision_name": "google/siglip-base-patch16-224",
    "language_model_name": "LGAI-EXAONE/EXAONE-4.0-1.2B",
    "lm_model": "LGAI-EXAONE/EXAONE-4.0-1.2B",
    "resampler_type": "mlp",
    "resampler": "mlp",
    "latent_dimension": 768,
    "resampler_depth": 3,
    "resampler_hidden_dim": 1536,
    "resampler_use_ln": true,
    "resampler_enable_cross_view": false,
    "resampler_num_views": 8,
    "resampler_dropout": 0.1,
    "resampler_heads": 8,
    "resampler_num_latents": 32
  },
  "environment": {
    "cuda_visible_devices": "1",
    "output_dir": "runs"
  }
}